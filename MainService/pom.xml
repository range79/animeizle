<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0
         http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>org.example</groupId>
    <artifactId>clickmaster-pro</artifactId>
    <version>2.0.1</version>
    <packaging>jar</packaging>

    <name>ClickMaster Pro</name>
    <description>High-Performance JavaFX Auto-Clicker with Modern UI</description>

    <properties>
        <maven.compiler.source>17</maven.compiler.source>
        <maven.compiler.target>17</maven.compiler.target>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>

        <!-- JavaFX Version - En güncel sürüm -->
        <javafx.version>21.0.2</javafx.version>
        <javafx.maven.plugin.version>0.0.8</javafx.maven.plugin.version>

        <!-- Other Dependencies - Güncellenmiş versiyonlar -->
        <jnativehook.version>2.2.2</jnativehook.version>
        <controlsfx.version>11.1.2</controlsfx.version>
        <slf4j.version>2.0.11</slf4j.version>
        <logback.version>1.4.14</logback.version>
    </properties>

    <dependencies>
        <!-- JavaFX Controls -->
        <dependency>
            <groupId>org.openjfx</groupId>
            <artifactId>javafx-controls</artifactId>
            <version>${javafx.version}</version>
        </dependency>

        <!-- JavaFX FXML -->
        <dependency>
            <groupId>org.openjfx</groupId>
            <artifactId>javafx-fxml</artifactId>
            <version>${javafx.version}</version>
        </dependency>

        <!-- JavaFX Graphics -->
        <dependency>
            <groupId>org.openjfx</groupId>
            <artifactId>javafx-graphics</artifactId>
            <version>${javafx.version}</version>
        </dependency>

        <!-- JavaFX Base -->
        <dependency>
            <groupId>org.openjfx</groupId>
            <artifactId>javafx-base</artifactId>
            <version>${javafx.version}</version>
        </dependency>

        <!-- JavaFX Web (for advanced effects) -->
        <dependency>
            <groupId>org.openjfx</groupId>
            <artifactId>javafx-web</artifactId>
            <version>${javafx.version}</version>
        </dependency>

        <!-- ControlsFX for additional controls -->
        <dependency>
            <groupId>org.controlsfx</groupId>
            <artifactId>controlsfx</artifactId>
            <version>${controlsfx.version}</version>
        </dependency>

        <!-- JNativeHook for global hotkeys -->
        <dependency>
            <groupId>com.github.kwhat</groupId>
            <artifactId>jnativehook</artifactId>
            <version>${jnativehook.version}</version>
        </dependency>

        <!-- Logging -->
        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>slf4j-api</artifactId>
            <version>${slf4j.version}</version>
        </dependency>
        <dependency>
            <groupId>ch.qos.logback</groupId>
            <artifactId>logback-classic</artifactId>
            <version>${logback.version}</version>
        </dependency>

        <!-- Testing -->
        <dependency>
            <groupId>org.junit.jupiter</groupId>
            <artifactId>junit-jupiter</artifactId>
            <version>5.10.1</version>
            <scope>test</scope>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <!-- Maven Compiler Plugin - En güncel sürüm -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.12.1</version>
                <configuration>
                    <source>17</source>
                    <target>17</target>
                    <release>17</release>
                    <compilerArgs>
                        <arg>-parameters</arg>
                    </compilerArgs>
                </configuration>
            </plugin>

            <!-- Maven Shade Plugin for fat JAR -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-shade-plugin</artifactId>
                <version>3.5.0</version>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>shade</goal>
                        </goals>
                        <configuration>
                            <transformers>
                                <transformer implementation="org.apache.maven.plugins.shade.resource.ManifestResourceTransformer">
                                    <mainClass>org.example.ClickMasterApp</mainClass>
                                </transformer>
                            </transformers>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

            <!-- JavaFX Maven Plugin -->
            <plugin>
                <groupId>org.openjfx</groupId>
                <artifactId>javafx-maven-plugin</artifactId>
                <version>${javafx.maven.plugin.version}</version>
                <configuration>
                    <mainClass>org.example.ClickMasterApp</mainClass>
                    <runtimePathOption>MODULEPATH</runtimePathOption>
                    <options>
                        <!-- ULTRA PERFORMANCE JVM OPTIONS -->
                        <option>--enable-native-access=ALL-UNNAMED</option>
                        <option>--add-opens=javafx.graphics/javafx.scene=ALL-UNNAMED</option>
                        <option>--add-opens=javafx.controls/javafx.scene.control=ALL-UNNAMED</option>

                        <!-- MEMORY OPTIMIZATION -->
                        <option>-Xms256m</option>
                        <option>-Xmx512m</option>
                        <option>-XX:+UseG1GC</option>
                        <option>-XX:MaxGCPauseMillis=10</option>
                        <option>-XX:+UseStringDeduplication</option>

                        <!-- PERFORMANCE OPTIMIZATION -->
                        <option>-XX:+OptimizeStringConcat</option>
                        <option>-XX:+UseCompressedOops</option>
                        <option>-XX:+UseCompressedClassPointers</option>
                        <option>-XX:+TieredCompilation</option>
                        <option>-XX:TieredStopAtLevel=1</option>

                        <!-- THREADING OPTIMIZATION -->
                        <option>-XX:ThreadPriorityPolicy=1</option>
                        <option>-XX:+UseThreadPriorities</option>

                        <!-- LOGGING OPTIMIZATION -->
                        <option>-Djava.util.logging.config.file=src/main/resources/logging.properties</option>
                        <option>-Dlogback.configurationFile=src/main/resources/logback.xml</option>
                    </options>
                </configuration>
            </plugin>

            <!-- Maven Assembly Plugin for creating fat JAR with JavaFX -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-assembly-plugin</artifactId>
                <version>3.6.0</version>
                <configuration>
                    <descriptorRefs>
                        <descriptorRef>jar-with-dependencies</descriptorRef>
                    </descriptorRefs>
                    <archive>
                        <manifest>
                            <mainClass>org.example.ClickMasterApp</mainClass>
                        </manifest>
                    </archive>
                </configuration>
                <executions>
                    <execution>
                        <id>make-assembly</id>
                        <phase>package</phase>
                        <goals>
                            <goal>single</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>

            <!-- jpackage Maven Plugin for Native Installer -->
            <plugin>
                <groupId>org.packager</groupId>
                <artifactId>jpackage-maven-plugin</artifactId>
                <version>1.6.0</version>
                <configuration>
                    <name>ClickMaster Pro</name>
                    <appVersion>2.0.1</appVersion>
                    <vendor>1400hz</vendor>
                    <destination>target/dist</destination>
                    <module>org.example/org.example.ClickMasterApp</module>
                    <runtimeImage>target/runtime</runtimeImage>
                    <javaOptions>
                        <option>--enable-native-access=ALL-UNNAMED</option>
                        <option>--add-opens=javafx.graphics/javafx.scene=ALL-UNNAMED</option>
                        <option>--add-opens=javafx.controls/javafx.scene.control=ALL-UNNAMED</option>
                        <option>--add-opens=javafx.base/javafx.beans=ALL-UNNAMED</option>
                        <option>--add-opens=javafx.base/javafx.beans.property=ALL-UNNAMED</option>
                        <option>--add-opens=javafx.base/javafx.collections=ALL-UNNAMED</option>
                        <option>--add-opens=javafx.controls/javafx.scene.control.skin=ALL-UNNAMED</option>
                        <option>-Dprism.vsync=false</option>
                        <option>-Dprism.targetvram=32M</option>
                        <option>-Djavafx.animation.pulse=60</option>
                        <option>-Djavafx.verbose=false</option>
                        <option>-Xms256m</option>
                        <option>-Xmx512m</option>
                        <option>-XX:+UseG1GC</option>
                        <option>-XX:+OptimizeStringConcat</option>
                        <option>-XX:+UseStringDeduplication</option>
                    </javaOptions>
                    <winDirChooser>true</winDirChooser>
                    <winMenu>true</winMenu>
                    <winMenuGroup>ClickMaster Pro</winMenuGroup>
                    <winShortcut>true</winShortcut>
                    <winShortcutPrompt>true</winShortcutPrompt>
                    <winPerUserInstall>true</winPerUserInstall>
                    <winRpmLicense>MIT</winRpmLicense>
                    <icon>src/main/resources/icon.ico</icon>
                </configuration>
            </plugin>

        </plugins>
    </build>
</project>
